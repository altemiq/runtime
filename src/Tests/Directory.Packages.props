<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="FluentAssertions" Version="6.12.1" />
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.11.1" />
    <PackageVersion Include="NSubstitute" Version="5.1.0" />
    <PackageVersion Include="SQLitePCLRaw.lib.e_sqlite3" Version="2.1.10" />
    <PackageVersion Include="System.Text.Json" Version="6.0.9" />
    <PackageVersion Include="xunit" Version="2.9.2" />
  </ItemGroup>

  <ItemGroup Condition=" '$(IsTestProject)' == 'true' ">
    <GlobalPackageReference Include="GitHubActionsTestLogger" Version="2.4.1" />
  </ItemGroup>

  <Choose>
    <When Condition=" $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net6.0')) OR $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net462')) ">
      <ItemGroup Condition=" '$(IsTestProject)' == 'true' ">
        <GlobalPackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
      </ItemGroup>
    </When>
    <When Condition=" $([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'netcoreapp3.1')) ">
      <ItemGroup Condition=" '$(IsTestProject)' == 'true' ">
        <GlobalPackageReference Include="xunit.runner.visualstudio" Version="2.4.5" />
      </ItemGroup>
    </When>
  </Choose>

  <ItemGroup Label="Analyzers" Condition=" '$(IsTestProject)' == 'true' ">
    <GlobalPackageReference Include="FluentAssertions.Analyzers" Version="0.33.0" />
  </ItemGroup>

</Project>