<Project>

  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <ItemGroup>
    <PackageVersion Include="FluentAssertions" Version="6.12.0" />
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.10.0" />
    <PackageVersion Include="NSubstitute" Version="5.1.0" />
    <PackageVersion Include="SQLitePCLRaw.bundle_e_sqlite3" Version="2.1.8" />
    <PackageVersion Include="System.Text.Json" Version="6.0.9" />
    <PackageVersion Include="xunit" Version="2.8.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(IsTestProject)' == 'true' ">
    <GlobalPackageReference Include="xunit.runner.visualstudio" Version="2.8.2" />
    <GlobalPackageReference Include="GitHubActionsTestLogger" Version="2.4.1" />
  </ItemGroup>

  <ItemGroup Label="Analyzers" Condition=" '$(IsTestProject)' == 'true' ">
    <GlobalPackageReference Include="FluentAssertions.Analyzers" Version="0.32.0" />
  </ItemGroup>

  <ItemGroup Label="Reference Assemblies" Condition=" $([MSBuild]::GetTargetFrameworkIdentifier('$(TargetFramework)')) == '.NETFramework' ">
    <GlobalPackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" VersionOverride="1.0.3" />
  </ItemGroup>

</Project>