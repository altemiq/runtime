<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\Core\build.props" />

  <PropertyGroup>
    <TargetFrameworks>net9.0;net8.0;net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net472</TargetFrameworks>
    <NoWarn>$(NoWarn);CA1861</NoWarn>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\Benchmarks\Core.Buffers.Compression.Benchmarks\ClusteredDataGenerator.cs" Link="Buffers\Compression\ClusteredDataGenerator.cs" />
    <Compile Include="..\..\Benchmarks\Core.Buffers.Compression.Benchmarks\UniformDataGenerator.cs" Link="Buffers\Compression\UniformDataGenerator.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NSubstitute" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="BitConverterTests.*.cs;Linq\ListTests.*.cs">
      <DependentUpon>$([System.Text.RegularExpressions.Regex]::Replace('%(Filename)%(Extension)', '\.[^.]+\%(Extension)$', '%(Extension)'))</DependentUpon>
    </Compile>
  </ItemGroup>

  <Import Project="..\..\Core\build.targets" />
</Project>
