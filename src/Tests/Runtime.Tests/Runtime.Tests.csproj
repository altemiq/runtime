<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net9.0;net8.0;net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net9.0-windows;net8.0-windows;net6.0-windows;net472</TargetFrameworks>
    <RootNamespace Condition="$(RootNamespace.Contains('.Runtime'))">$(RootNamespace.Replace('.Runtime', ''))</RootNamespace>
  </PropertyGroup>

  <ItemGroup Condition=" $([MSBuild]::GetTargetFrameworkIdentifier($(TargetFramework))) == '.NETFramework' ">
    <RuntimeHostConfigurationOption Include="System.Runtime.Loader.UseRidGraph" Value="true" />
  </ItemGroup>

  <PropertyGroup Condition=" $([MSBuild]::GetTargetFrameworkIdentifier($(TargetFramework))) == '.NETFramework' ">
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SourceGear.sqlite3" GeneratePathProperty="true" />
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Runtime\Runtime.csproj" />
    <ProjectReference Include="..\Dummy\Dummy.csproj">
      <ReferenceOutputAssembly>False</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <None Update="**/_._" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <Target Name="_CopyItemsToCopy" BeforeTargets="PrepareForRun">
    <PropertyGroup>
      <_ItemTargetFramework>netstandard2.0</_ItemTargetFramework>
    </PropertyGroup>
    <ItemGroup>
      <_ItemsToCopy Include="..\Dummy\bin\$(Configuration)\$(_ItemTargetFramework)\*.dll" />
      <_Runtimes Include="linux-x64;linux-x86;win-x64;win-x86" />
    </ItemGroup>

    <Copy SourceFiles="@(_ItemsToCopy)" DestinationFolder="$(OutputPath)runtimes\%(_Runtimes.Identity)\lib\$(_ItemTargetFramework)\" SkipUnchangedFiles="true" />
  </Target>

  <Target Name="_CopyAllSqliteToOutput" BeforeTargets="PrepareForRun">
    <ItemGroup>
      <_CopyAllSqliteToOutput Include="$(PkgSourceGear_sqlite3)\runtimes\**" />
    </ItemGroup>

    <Copy SourceFiles="@(_CopyAllSqliteToOutput)" DestinationFolder="$(OutputPath)runtimes\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
