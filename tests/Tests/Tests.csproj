<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\src\Core\build.props" />

  <PropertyGroup>
    <TargetFrameworks>net9.0;net8.0;net6.0</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net472</TargetFrameworks>
    <NoWarn>$(NoWarn);CA1861</NoWarn>
    <LangVersion>preview</LangVersion>

    <PolySharpIncludeGeneratedTypes>
      $(PolySharpIncludeGeneratedTypes);
      System.Runtime.CompilerServices.IsExternalInit;
    </PolySharpIncludeGeneratedTypes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\benchmarks\Core.Buffers.Compression.Benchmarks\*DataGenerator.cs" Link="Buffers\Compression\%(FileName)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NSubstitute" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Core\Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="BitConverterTests.*.cs;Linq\ListTests.*.cs">
      <DependentUpon>$([System.Text.RegularExpressions.Regex]::Replace('%(Filename)%(Extension)', '\.[^.]+\%(Extension)$', '%(Extension)'))</DependentUpon>
    </Compile>
  </ItemGroup>

  <Import Project="..\..\src\Core\build.targets" />
</Project>
