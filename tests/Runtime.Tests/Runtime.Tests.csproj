<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net9.0;net8.0;net6.0</TargetFrameworks>
    <TargetFrameworks Condition="$([System.OperatingSystem]::IsWindows())">$(TargetFrameworks);net9.0-windows;net8.0-windows;net6.0-windows;net472</TargetFrameworks>
    <RootNamespace Condition="$(RootNamespace.Contains('.Runtime'))">$(RootNamespace.Replace('.Runtime', ''))</RootNamespace>
  </PropertyGroup>
  
  <Choose>
    <When Condition=" $([MSBuild]::GetTargetFrameworkIdentifier($(TargetFramework))) == '.NETFramework' ">
      <ItemGroup>
        <RuntimeHostConfigurationOption Include="System.Runtime.Loader.UseRidGraph" Value="true" />
      </ItemGroup>

      <PropertyGroup>
        <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
        <MeziantouPolyfill_IncludedPolyfills>T:System.Runtime.CompilerServices.IsExternalInit</MeziantouPolyfill_IncludedPolyfills>
      </PropertyGroup>    
    </When>
  </Choose>

  <ItemGroup>
    <PackageReference Include="SQLitePCLRaw.lib.e_sqlite3" GeneratePathProperty="true" />
    <PackageReference Include="System.CommandLine" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Runtime\Runtime.csproj" />
    <ProjectReference Include="..\Dummy\Dummy.csproj">
      <ReferenceOutputAssembly>False</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <None Update="**/_._" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <Target Name="_CopyItemsToCopy" BeforeTargets="PrepareForRun">
    <PropertyGroup>
      <_ItemTargetFramework>netstandard2.0</_ItemTargetFramework>
    </PropertyGroup>
    <ItemGroup>
      <_ItemsToCopy Include="..\Dummy\bin\$(Configuration)\$(_ItemTargetFramework)\*.dll" />
      <_Runtimes Include="linux-x64;linux-x86;win-x64;win-x86" />
    </ItemGroup>

    <Copy SourceFiles="@(_ItemsToCopy)" DestinationFolder="$(OutputPath)runtimes\%(_Runtimes.Identity)\lib\$(_ItemTargetFramework)\" SkipUnchangedFiles="true" />
  </Target>

  <Target Name="_CopyAllSqliteToOutput" BeforeTargets="PrepareForRun">
    <ItemGroup>
      <_CopyAllSqliteToOutput Include="$(PkgSQLitePCLRaw_lib_e_sqlite3)\runtimes\**" />
    </ItemGroup>

    <Copy SourceFiles="@(_CopyAllSqliteToOutput)" DestinationFolder="$(OutputPath)runtimes\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
